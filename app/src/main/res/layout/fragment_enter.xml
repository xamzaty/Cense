<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="40dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_start_learning"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Start Learning"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_start_learning"
        app:layout_constraintStart_toStartOf="@+id/button_start_learning"
        app:layout_constraintTop_toBottomOf="@+id/button_start_learning" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_parent"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in as parent"
        app:layout_constraintEnd_toEndOf="@+id/button_parent"
        app:layout_constraintStart_toStartOf="@+id/button_parent"
        app:layout_constraintTop_toBottomOf="@+id/button_parent"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>